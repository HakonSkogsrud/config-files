{
  "window.titleBarStyle": "native",
  "window.menuBarVisibility": "toggle",
  "window.customTitleBarVisibility": "never",
  "window.zoomLevel": 1,
  "chat.editor.fontSize": 13,
  "editor.fontSize": 13,
  "editor.scrollbar.verticalScrollbarSize": 6,
  "editor.scrollbar.horizontalScrollbarSize": 6,
  "terminal.integrated.fontSize": 13,
  "editor.minimap.enabled": false,
  "git.confirmSync": false,
  "git.autofetch": true,
  "explorer.confirmDelete": false,
  "editor.fontFamily": "Noto Sans Mono",
  "terminal.integrated.fontFamily": "courier",
  "git.enableSmartCommit": true,
  "terminal.integrated.defaultProfile.linux": "fish",
  "terminal.integrated.sendKeybindingsToShell": true,
  "symbols.hidesExplorerArrows": false,
  "workbench.iconTheme": "symbols",
  "workbench.startupEditor": "none",
  "window.autoDetectColorScheme": true,
  "editor.renderWhitespace": "none",
  "hediet.vscode-drawio.resizeImages": null,
  "redhat.telemetry.enabled": false,
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "editor.formatOnSave": true,
  "chat.instructionsFilesLocations": {
    "README.md": true
  },
  "python.defaultInterpreterPath": "/bin/python",
  "github.copilot.nextEditSuggestions.enabled": true,
  "workbench.preferredLightColorTheme": "Default Dark Modern",
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "workbench.colorCustomizations": {
    "[Default Dark Modern]": {
      //========================================================
      // General Window & Layout
      //========================================================
      "titleBar.activeBackground": "#1B1B1B",
      "titleBar.inactiveBackground": "#1B1B1B",
      "activityBar.background": "#1B1B1B",
      "activityBar.border": "#1B1B1B",
      "statusBar.background": "#1B1B1B",
      "statusBar.border": "#1B1B1B",
      //========================================================
      // Side Bar
      //========================================================
      "sideBar.background": "#1B1B1B",
      "sideBar.border": "#1B1B1B",
      "sideBarSectionHeader.background": "#1B1B1B",
      //========================================================
      // Editor & Tabs
      //========================================================
      "editor.background": "#1B1B1B",
      "editorGroupHeader.tabsBackground": "#1B1B1B",
      "tab.activeBackground": "#1B1B1B",
      "tab.activeBorder": "#1B1B1B",
      "tab.inactiveBackground": "#1B1B1B",
      //========================================================
      // Panel (Terminal, Output, Problems)
      //========================================================
      "panel.background": "#1B1B1B",
      "terminal.background": "#1B1B1B",
      //========================================================
      // Lists & Selections
      //========================================================
      "list.activeSelectionBackground": "#1B1B1B",
      "list.inactiveSelectionBackground": "#1B1B1B"
    },
  },
}